{{#if request}}
  {{#if isPending}}
    <div class="button-solid disabled pointer">
      <button>Request Pending</button>
    </div>
  {{else if  isDeclined}}
    <div class="button-solid disabled pointer">
      <button>Request Declined</button>
    </div>
  {{else if  isAccepted}}
    <button class="button-solid">
      {{#link-to "classroom.timeline" run.course.id run.id tagName="button" activeClass=""}} <i class="fas fa-play"></i> Resume
      {{/link-to}}
    </button>
  {{/if}}

{{else}} {{! we don't have any request by this user}}
  <div class="button-solid pointer">
    <button {{action 'addRequest'}}>
      Request
    </button>
  </div>
{{/if}}
